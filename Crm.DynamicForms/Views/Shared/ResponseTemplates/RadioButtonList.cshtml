@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Offline.Extensions

<div class="row form-element-title">
	<span data-bind="text: $root.getLocalizationText($data)">
	</span>
	&nbsp;
</div>
<div class="form-element-response" >
	<div class="row">
		@using (Html.TemplateForEach("Helper.DynamicForm.getChoicesArray($data)")) { 
			<label class="form-element-layout p-l-0" data-bind="css: Helper.DynamicForm.getCssFromLayout($parent.Layout())" style="margin-left: 0">
				<p>
					@using (Html.TemplateCondition("$parent.Response() == $data")) { 
						<i class="fa fa-check-square-o"></i>
					 } 
					@using (Html.TemplateCondition("$parent.Response() != $data")) { 
						<i class="fa fa-square-o"></i>
					 } 
					<span data-bind="text: $root.getLocalizationText($parent, $data)"></span>
				</p>
			</label>
		 } 
	</div>
</div>


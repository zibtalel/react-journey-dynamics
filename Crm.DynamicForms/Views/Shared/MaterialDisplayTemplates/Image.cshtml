@inherits Crm.Library.Modularization.CrmViewUserControl

<div class="row">
	@await Html.PartialAsync("MaterialDisplayTemplates/Hint")
	<div class="col-xs-11">
		<label class="control-label" data-bind="text: $root.getLocalizationText($data)">
		</label>
		<figure data-bind="if: $data.FileResourceId">
			<!-- ko if: $data.FileResource -->
			<img class="img-responsive" data-bind="fileResource: $data.FileResource, attr: { alt: $root.getLocalizationText($data) }" style="max-width: 100%;"/>
			<!-- /ko -->
			<!-- ko ifnot: $data.FileResource -->
			<img class="img-responsive" data-bind="attr: { src: Helper.Url.resolveUrl('~/File/File/' + ko.unwrap($data.FileResourceId)), alt: $root.getLocalizationText($data) }" style="max-width: 100%;"/>
			<!-- /ko -->
		</figure>
	</div>
</div>
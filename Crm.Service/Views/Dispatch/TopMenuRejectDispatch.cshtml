@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions

<li data-bind="visible: $root.dispatch().StatusKey() === 'Read' || ($root.dispatch().StatusKey() === 'Released' && AuthorizationManager.isAuthorizedForAction('Dispatch', 'CreateForOtherUsers'))">
	<a id="reject-dispatch" href="#" data-toggle="modal" data-target="#modal" data-bind="attr: { 'data-route': 'Crm.Service/Dispatch/RejectTemplate/' + $root.dispatch().Id() }">
		<i class="zmdi zmdi-thumb-down"></i>
		@(Html.Localize("Reject"))
	</a>
</li>

@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions

<div role="tabpanel" class="tab-pane" id="tab-installations" data-bind="with: tabs()['tab-installations']">
	<empty-state-box params="mood: 'sad', title: 'Installations', text: 'NoServiceContractInstallationsInfo'" data-bind="visible: items().length === 0 && !isFiltered()"></empty-state-box>
	
	<div class="generic-list listview lv-bordered">
		<div class="lv-body">
			<div data-bind="foreach: items">
				 @await Html.PartialAsync("../ServiceContractInstallationList/MaterialItemTemplate") 
			</div>
			<!-- ko if: items().length === 0 && isFiltered() -->
			<div id="generic-list-empty-state" class="lv-item media">
				<div class="row media-body">
					<div class="col-xs-12">
						<small class="lv-small">@(Html.Localize("NoRecordsForSearchCriteria"))</small>
					</div>
				</div>
			</div>
			<!-- /ko -->
		</div>
	</div>
	 @await Html.PartialAsync("Material/GenericListPreloader") 
	<floating-action-button>
		<!-- ko requiredPermission: { name: 'SaveInstallationRelationship', group: 'ServiceContract' } -->
		<li data-bind="with: $root">
			<a id="add-servicecontract-installation-relationship" href="#" data-mfb-label="@(Html.Localize("AddInstallation"))" data-route="Crm.Service/ServiceContractInstallationRelationship/EditTemplate/" data-toggle="modal" data-target="#modal">
				<i class="zmdi zmdi-plus"></i>
			</a>
		</li>
		<!-- /ko -->
	</floating-action-button>
</div>

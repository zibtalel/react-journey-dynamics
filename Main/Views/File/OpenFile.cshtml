@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body, html
        {
            margin: 0; padding: 0; height: 100%; overflow: hidden;
        }
        iframe
        {
            border: 0;
        }
    </style>
</head>
<body>
    <iframe src="@Url.Action("File", "File", new { plugin = "Main", id = ViewBag.FileId })" width="100%" height="100%" sandbox="allow-downloads"></iframe>
</body>
</html>
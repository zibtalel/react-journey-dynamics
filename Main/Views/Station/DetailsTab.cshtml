@inherits Crm.Library.Modularization.CrmViewUserControl

<div role="tabpanel" class="tab-pane animated fadeIn" id="tab-details">
	<pmb-block params="icon: 'info-outline', caption: 'General', context: { station: station }, condition: window.AuthorizationManager.isAuthorizedForAction('Station', 'Edit')">
		<pmbb-view>
			<!-- ko with: station -->
			<pmbb-view-entry params="caption: 'Name'">
				<span data-bind="text: Name"></span>
				<span class="c-gray" data-bind="translatedText: 'Unspecified', ifnot: Name"></span>
			</pmbb-view-entry>
			<pmbb-view-entry params="caption: 'LegacyId'">
				<span data-bind="text: LegacyId"></span>
				<span class="c-gray" data-bind="translatedText: 'Unspecified', ifnot: LegacyId"></span>
			</pmbb-view-entry>
			<!-- /ko -->
		</pmbb-view>
		<pmbb-edit>
			<!-- ko with: station -->
			<pmbb-edit-entry params="caption: 'Name', validationElement: Name">
				<input type="text" class="form-control" data-bind="value: Name">
			</pmbb-edit-entry>
			<pmbb-edit-entry params="caption: 'LegacyId', validationElement: LegacyId">
				<input type="text" class="form-control" data-bind="value: LegacyId">
			</pmbb-edit-entry>
			<!-- /ko -->
		</pmbb-edit>
	</pmb-block>
</div>
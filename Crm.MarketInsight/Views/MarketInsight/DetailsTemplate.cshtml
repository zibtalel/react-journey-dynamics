
@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions
@using Crm.Library.Modularization.Extensions
@using Crm.Rest.Model

<div class="container">
	<div class="card" id="profile-main">
		<div class="pm-overview c-overflow" tabindex="4">
			<div class="pmo-pic">
				<div class="p-relative">
					<div class="p-25 bgm-white">
						<!-- ko with: marketInsight -->
						<p id="potential-title" class="text-center f-500">
								<span data-bind="text: Name"></span>
						</p>				
						<hr/>
						<p>
							@(Html.Localize("ParentName"))
							<a data-bind="attr: {href: '#/Main/Company/DetailsTemplate/'+ ko.unwrap(ParentId)}">
								<span data-bind="text: Helper.Company.getDisplayName($data.Company)"></span>
							</a>
						</p>
					<!-- /ko -->
					</div>
				</div>
			</div>
			@Html.PluginRenderActions("MaterialContactSidebarExtensions")
		</div>
		<div class="pm-body clearfix">
			<ul class="tab-nav tn-justified" role="tablist" tabindex="1">
				@Html.PluginRenderActions("MarketInsightDetailsMaterialTabHeader")
			</ul>
			<div class="tab-content">
				@Html.PluginRenderActions("MarketInsightDetailsMaterialTab")
			</div>
		</div>
	</div>
</div>



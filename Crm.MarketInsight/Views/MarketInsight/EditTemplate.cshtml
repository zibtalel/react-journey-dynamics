@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Globalization.Extensions

<div class="modal-header card-header ch-alt">
	<button type="button" class="close" data-dismiss="modal" aria-label="@(Html.Localize("Close"))">
		<span aria-hidden="true">&times;</span>
	</button>
	<div class="row">
		<h4 class="modal-title col-md-8 col-xs-11" data-bind="text: marketInsight().ProductFamily().Name()">
		</h4>
	</div>
</div>
<div class="modal-body">
	<!-- ko requiredPermission: { name: 'SetStatus', group: 'MarketInsight' } -->
	<div class="form-group">
		<div class="fg-line">
			 <form-element id="ArticleTypeKey" params="value: marketInsight().StatusKey, caption: 'Status', type: 'select'">
				  <select name="ArticleTypeKey" class="form-control" data-bind="select2autocompleter: { data: value, autocompleteOptions: Helper.Lookup.getAutocompleteOptions('CrmMarketInsight_MarketInsightStatus'), placeholder: placeholder }"></select>
			  </form-element>
		</div>
	</div>
	<!-- /ko -->
	<div class="form-group">
		<div class="fg-line">
			  <form-element id="ArticleTypeKey" params="value: marketInsight().ReferenceKey, caption: 'ReferenceQuestion', type: 'select'">
				  <select name="ArticleTypeKey" class="form-control" data-bind="select2autocompleter: { data: value, autocompleteOptions: Helper.Lookup.getAutocompleteOptions('CrmMarketInsight_MarketInsightReference'), placeholder: placeholder }"></select>
			  </form-element>
		</div>
	</div>
	<div class="form-group">
		<div class="fg-line">
			<label class="control-label fg-label">@(Html.Localize("BackgroundInfo"))</label>
			<input type="text" class="form-control" data-bind="value: marketInsight().BackgroundInfo"/>
		</div>
	</div>
</div>
<div class="modal-footer card-header ch-alt p-15">
	<button type="button" class="btn btn-lg btn-default f-13 waves-effect" data-dismiss="modal">
		@(Html.Localize("Cancel"))
	</button>
	<button type="button" class="btn btn-lg btn-primary f-13 waves-effect" data-bind="click: $root.save">
		@(Html.Localize("Save"))
	</button>
</div>